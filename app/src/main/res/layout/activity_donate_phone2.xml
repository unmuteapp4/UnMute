<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unmuteapp4gmail.unmute.DonatePhone2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/topphone"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your old unused phones and our efforts can be combined to give voice to the hearing impaired. "
                android:id="@+id/textView5"
                android:layout_marginTop="150dp"
                android:textSize="20dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/middlephone"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Together we can empower them in their battle against silence and help them express themselves. You old phones might not be useful to you, but surely can come to their use."
                android:id="@+id/textView6"
                android:layout_marginTop="440dp"
                android:textSize="20dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bottomphone"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView6"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Donate Now"
                android:id="@+id/button11"
                android:background="@drawable/mybutton"
                android:backgroundTint="#ff9500"
                android:textColor="#ffffff"
                android:onClick="goToActivity23"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
