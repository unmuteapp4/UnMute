<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unmuteapp4gmail.unmute.home"
    android:backgroundTint="#ffffff">


    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Login"
            android:id="@+id/button4"
            android:background="@drawable/mybutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="#4cd964"
            android:textColor="#ffffff"
            android:onClick="sendMessage1"
            android:textSize="25dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Donate"
            android:id="@+id/button5"
            android:background="@drawable/mybutton"
            android:layout_alignTop="@+id/button4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:backgroundTint="#ff9500"
            android:textColor="#ffffff"
            android:onClick="sendMessage2"
            android:textSize="25dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/imageButton"
        android:src="@mipmap/ui4"
        android:backgroundTint="#ffffff"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignParentTop="true"
        android:onClick="sendMessage3"
        />


</RelativeLayout>
