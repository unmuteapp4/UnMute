<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unmuteapp4gmail.unmute.Student">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Learning"
        android:id="@+id/button8"
        android:background="@drawable/mybutton"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#ff2a68"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Games"
        android:id="@+id/button9"
        android:background="@drawable/mybutton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#ffcc00"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:onClick="goToActivity12"
        />


    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Tests"
        android:id="@+id/button4"
        android:background="@drawable/mybutton"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentStart="true"
        android:backgroundTint="#52edc7"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:onClick="goToActivity21"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Progress"
        android:id="@+id/button5"
        android:background="@drawable/mybutton"
        android:layout_marginTop="210dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:backgroundTint="#c644fc"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Jobs"
        android:id="@+id/button6"
        android:background="@drawable/mybutton"
        android:backgroundTint="#007aff"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:onClick="goToActivity10"
         />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Text to Speech"
        android:id="@+id/button7"
        android:background="@drawable/mybutton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/button6"
        android:backgroundTint="#1f1f21"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:onClick="goToActivity8"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignParentTop="true"
        android:text="Student"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#8e8e93" />


</RelativeLayout>
